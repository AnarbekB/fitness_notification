{% extends "@FOSUser/layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}


{% block body %}
    <div class="uk-container">
        <div class="uk-card uk-card-body uk-position-top-center uk-margin-large-top">
            <h1>Авторизация</h1>
            {% block fos_user_content %}
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form action="{{ path("fos_user_security_check") }}" method="post" class="uk-form-stacked">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                    {% endif %}

                    <div class="form-group floating-label-form-group controls">
                        <div class="uk-margin">
                            <div class="uk-inline">
                                <span class="uk-form-icon" uk-icon="icon: user"></span>
                                <input class="uk-input" type="text" placeholder="{{ 'form.email'|trans }}"
                                       id="username" value="{{ last_username }}" name="_username">
                            </div>
                        </div>
                    </div>

                    <div class="form-group floating-label-form-group controls">
                        <div class="uk-margin">
                            <div class="uk-inline">
                                <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: lock"></span>
                                <input class="uk-input" type="password"
                                       placeholder="{{ 'security.login.password'|trans }}"
                                       id="password" autocomplete="current-password" name="_password">
                            </div>
                        </div>
                    </div>

                    <label>
                        <input class="uk-checkbox" type="checkbox" id="remember_me" name="_remember_me" value="on">
                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    </label>

                    <div class="form-group floating-label-form-group controls">
                        <div class="uk-margin">
                            <button type="submit" id="_submit" name="_submit"
                                    class="uk-button uk-button-default uk-position-bottom-center">{{ 'security.login.submit'|trans }}</button>
                        </div>
                    </div>

                </form>
            {% endblock fos_user_content %}
        </div>
    </div>
{% endblock %}