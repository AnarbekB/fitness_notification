{% extends 'base.html.twig' %}

{% block body_id 'group-lessons' %}

{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block body %}

    <h2 class=".uk-article">Список групповых занятий:</h2>

    <div class="uk-child-width-1-4 uk-grid-small" uk-grid>
        {% for lesson in lessonTypes %}
            <div>
                <div class="uk-card uk-card-default uk-card-hover">
                    <div class="uk-card-media-top">
                        {% if lesson.image != '' %}
                            <img class="image-avatar" src="uploads/group_lessons/{{ lesson.image }}">
                        {% else %}
                            <img class="image-avatar" src="img/avatar.jpg" alt="">
                        {% endif %}
                    </div>
                    <div class="uk-card-body">
                        <h3 class="uk-card-title">{{ lesson.name }}</h3>
                        <p>{{ lesson.comment }}</p>
                    </div>
                    <div class="uk-card-footer">
                        <a href="{{ path('subscribe_lesson_type', {'code' : lesson.code}) }}" class="uk-button uk-button-text">Подписаться</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}